{% extends 'base.html.twig' %}

{% block title %}List users{% endblock %}

{% block body_id 'user_list' %}

{% block main %}
    {% for user in users %}
        <article class="post">
            <h2>
                <a href="{{ path('user_show', {id: user.id}) }}">
                    {{ user.fullName }}
                </a>
                <div style="float: right;"><a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-xs btn-warning">Edit</a></div>
                <div style="float: right;"><a href="{{ path('user_delete', {id: user.id}) }}" class="btn btn-xs btn-danger">Delete</a></div>
                <div style="float: right;"><a href="{{ path('user_articles', {id: user.id}) }}" class="btn btn-xs btn-success">Articles</a></div>
            </h2>

            <p class="post-metadata">
                <span class="metadata">{{ user.username }}</span>
                <span class="metadata">{{ user.email }}</span>
            </p>

        </article>
    {% else %}
        <div class="well">Users not found</div>
    {% endfor %}

{% endblock %}
