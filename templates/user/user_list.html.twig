{% extends 'base.html.twig' %}

{% block title %}{{ 'user.list'|trans }}{% endblock %}

{% block body_id 'user_list' %}

{% block main %}
    {% for user in users %}
        <article class="post">
            <h2>
                <a href="{{ path('user_show', {id: user.id}) }}">
                    {{ user.fullName }}
                </a>
                <div style="float: right;"><a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-xs btn-warning">{{ 'action.edit'|trans }}</a></div>
                <div style="float: right;"><a href="{{ path('user_delete', {id: user.id}) }}" class="btn btn-xs btn-danger">{{ 'action.delete'|trans }}</a></div>
                <div style="float: right;"><a href="{{ path('user_articles', {id: user.id}) }}" class="btn btn-xs btn-success">{{ 'action.user_articles'|trans }}</a></div>
            </h2>

            <p class="post-metadata">
                <span class="metadata">{{ user.username }}</span>
                <span class="metadata">{{ user.email }}</span>
            </p>

        </article>
    {% else %}
        <div class="well">{{ 'user.no_found'|trans }}</div>
    {% endfor %}

{% endblock %}
