<div class="quote-space pb-2 pt-2 px-5">
    <h3 class="text-center pb-3">{{ 'comments.new'|trans }}</h3>
    {% for comment in comments %}
        <p>
            <i class="fa fa-comment"></i> {{ comment.content }}<br>â€” <a href="{{ path('article_show', {slug: comment.article.slug}) }}">{{ comment.author.fullName }}, {{ comment.publishedAt|date("j F Y, H:i:s") }}</a>
        </p>
    {% else %}
        <div class="well">{{ 'comment.no_found'|trans }}</div>
    {% endfor %}
</div>

<div class="list-categories pb-2 pt-2 px-5">
    <h3 class="text-center pb-3">{{ 'categories'|trans }}</h3>
    <ul class="list-group">
        {% for category in categories %}
            <li class="list-group-item">
                <a href="{{ path('category_show', {slug: category.slug}) }}">
                    {{ category.title }}
                </a></li>
        {% else %}
            <li class="list-group-item">{{ 'category.no_found'|trans }}</li>
        {% endfor %}
    </ul>
</div>
