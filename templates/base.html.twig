<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Symfony Demo-Blog{% endblock %}</title>
        
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        {% endblock %}        
        
    </head>
    
    <body id="{% block body_id %}{% endblock %}">
        <div class="container">
            
            <header class="blog-header py-3">
                {% block header %}{% endblock %}
            </header>                                  
            
            
            <div class="nav-scroller py-1 mb-2">
                <nav class="nav d-flex justify-content-between">
                    {% block header_navigation_links %}
                        {% if is_granted('ROLE_USER') %}
                            <a class="p-2 text-primary" href="{{ path('homepage') }}">{{ 'Home'|trans }}</a>
                            <a class="p-2 text-primary" href="{{ path('article_list') }}">{{ 'Blog'|trans }}</a>

                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="p-2 text-primary" href="{{ path('article_new') }}">{{ 'New article'|trans }}</a>
                                <a class="p-2 text-primary" href="{{ path('user_new') }}">{{ 'New user'|trans }}</a>
                                <a class="p-2 text-primary" href="{{ path('tag_new') }}">{{ 'New tag'|trans }}</a>
                            {% endif %}

                            <a class="p-2 text-primary" href="{{ path('user_list') }}">{{ 'Users'|trans }}</a>
                            <a class="p-2 text-primary" href="{{ path('category_list') }}">{{ 'Categories'|trans }}</a>
                            <a class="p-2 text-primary" href="{{ path('tag_list') }}">{{ 'Tags'|trans }}</a>
                            <a class="p-2 text-primary" href="{{ path('app_profile') }}">{{ 'Profile'|trans }}</a>
                            <a class="p-2 text-primary" href="{{ path('app_logout') }}">{{ 'Logout'|trans }}</a>

                        {% else %}
                            <a class="p-2 text-primary" href="{{ path('app_login') }}">{{ 'Login'|trans }}</a>
                            <a class="p-2 text-primary" href="{{ path('app_register') }}">{{  'Register'|trans }}</a>
                        {% endif %}
                        <a href="{{ path('homepage', {'_locale':'en'}) }}" class="btn" style="text-align: right;">EN</a>
                        <a href="{{ path('homepage', {'_locale':'ru'}) }}" class="btn" style="text-align: right;">RU</a>
                    {% endblock %}
                </nav>
            </div>
        </div>
        <main role="main" class="container">
            {% block body %}
                <div class="row">
                    <div class="col-md-8 blog-main">
                        {% block main %}{% endblock %}
                    </div>
                    <aside class="col-md-4 blog-sidebar">
                        {% block sidebar %}{% endblock %}
                    </aside>
                </div>
            {% endblock %}
        </main>

        {% block footer %}
            <footer class="blog-footer" style="background-color: #f9f9f9;padding: 2.5rem 0;">
                <div class="container">
                    <div class="row">
                        <div id="footer-copyright" class="col-md-12">
                            <p>My Symfony Blog - &copy; {{ 'now'|date('Y') }}</p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>        
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        {% endblock %}
        
    </body>
</html>
