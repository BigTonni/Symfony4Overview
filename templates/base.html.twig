<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <title>{% block title %}Symfony Demo-Blog{% endblock %}</title>
        
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
        {% endblock %}        
        
    </head>
    
    <body id="{% block body_id %}{% endblock %}">
        <div class="container">
            
            <header class="blog-header py-3">
                {% block header %}{% endblock %}
            </header>                                  
            
            
            <div class="nav-scroller py-1 mb-2">
                <nav class="nav d-flex justify-content-between">
                    {% block header_navigation_links %}
                        <a class="p-2 text-primary" href="{{ path('homepage') }}">Home</a>
                        <a class="p-2 text-primary" href="{{ path('article_list') }}">Blog</a>
                        <a class="p-2 text-primary" href="{{ path('article_new') }}">New article</a>
                        <a class="p-2 text-primary" href="{{ path('user_list') }}">Users</a>
                        <a class="p-2 text-primary" href="{{ path('user_new') }}">New user</a>
                        <a class="p-2 text-primary" href="{{ path('category_list') }}">Categories</a>
                    {% endblock %}
                </nav>
            </div>
        </div>
        <main role="main" class="container">
            {% block body %}
                <div class="row">
                    <div class="col-md-8 blog-main">
                        {% block main %}{% endblock %}
                    </div>
                    <aside class="col-md-4 blog-sidebar">
                        {% block sidebar %}{% endblock %}
                    </aside>
                </div>
            {% endblock %}
        </main>

        {% block footer %}
            <footer class="blog-footer" style="background-color: #f9f9f9;padding: 2.5rem 0;">
                <div class="container">
                    <div class="row">
                        <div id="footer-copyright" class="col-md-12">
                            <p>My Symfony Blog - &copy; {{ 'now'|date('Y') }}</p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>        
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
        {% endblock %}
        
    </body>
</html>
