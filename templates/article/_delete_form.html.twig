{{ include('article/_delete_article_confirmation.html.twig') }}
<form action="{{ url('article_delete', {slug: article.slug}) }}" method="post" data-confirmation="true" id="delete-form">
    <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
    <button type="submit" class="btn btn-lg btn-block btn-danger">
        <i class="fa fa-trash" aria-hidden="true"></i>
        {{ 'action.delete_article'|trans }}
    </button>
</form>
